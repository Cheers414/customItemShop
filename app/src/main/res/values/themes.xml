<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CustomItemShop" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@color/text</item>
        <item name="android:background">@color/background</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="textT1" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">8pt</item>
        <item name="android:textSize">18pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textT2" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_marginLeft">8pt</item>
        <item name="android:textSize">16pt</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="button">
        <item name="android:layout_margin">8pt</item>
        <item name="android:textSize">14pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_state</item>
    </style>

    <style name="Base.Theme.CustomItemShop.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.CustomItemShop.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base.Theme.CustomItemShop.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>